<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="zigbee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
        xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">
	<thing-type id="compacta_zbmplug15">
		<label>Compacta ZBMPlug15</label>
		<description>Compacta Smart Meter</description>
		<channels>
			<channel id="switch" typeId="switch">
				<label>Device on/off</label>
				<properties>
                    <property name="binding:*:OnOffType">11:OnOff</property>
				</properties>
			</channel>
			<channel id="power" typeId="power">
				<label>Current summation delivered</label>
                <properties>
                    <property name="binding:State:NumberType">22:ColorTemperature</property>
                </properties>
			</channel>
		</channels>
		<properties>
            <property name="vendor">Compacta</property>
            <property name="model">ZBMPlug15</property>
        </properties>
	</thing-type>
</thing:thing-descriptions>
