      <parameter name="config_50_1" type="integer" groupName="configuration"
                 min="0" max="255">
        <label>50: Enable notifications</label>
        <description><![CDATA[
Enable to send notifications to associated devices (Group 1) when the state of LED Bulb is changed.
                !]]></description>
        <default>0</default>
        <options>
          <option value="0">Disable</option>
          <option value="1">Hail</option>
          <option value="1">Basic</option>
        </options>
