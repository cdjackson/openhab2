<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="zwave"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="http://eclipse.org/smarthome/schemas/zwave-thing-description/v1.0.0"
	xsi:schemaLocation="http://eclipse.org/smarthome/schemas/zwave-thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/zwave-thing-description/v1.0.0">
	<thing-type id="radiothermostatcompany_ct100_00_000">
		<label>Radio Thermostat Company of America CT100</label>
		<description><![CDATA[Z-Wave Thermostat<br><h1>Device Overview</h1><p>Brief description here</p><h1>Inclusion and Exclusion</h1><p>To include the device into the network...</p><p>To exclude the device from the network...</p>]]></description>
		<channels>
            <channel id="setpoint-1" typeId="setpoint">
                <label>Heating Setpoint</label>
                <properties>
                    <property name="binding:*:Number">THERMOSTAT_SETPOINT;setpoint_type=1,setpoint_scale=1</property>
                </properties>
            </channel>
            <channel id="setpoint-2" typeId="setpoint">
                <label>Cooling Setpoint</label>
                <properties>
                    <property name="binding:*:Number">THERMOSTAT_SETPOINT;setpoint_type=2,setpoint_scale=1</property>
                </properties>
            </channel>
            <channel id="temperature-1" typeId="temperature">
                <label>Current Temperature</label>
                <properties>
                    <property name="binding:*:Number">SENSOR_MULTILEVEL:1;sensor_type=TEMPERATURE,setpoint_scale=1</property>
                </properties>
            </channel>
            <channel id="humidity-1" typeId="humidity">
                <label>Current Temperature</label>
                <properties>
                    <property name="binding:*:Number">SENSOR_MULTILEVEL:2;sensor_type=HUMIDITY</property>
                </properties>
            </channel>
            <channel id="mode-1" typeId="mode">
                <label>Thermostat Mode</label>
                <properties>
                    <property name="binding:*:Number">THERMOSTAT_MODE</property>
                </properties>
            </channel>
            <channel id="mode-1" typeId="mode">
                <label>Thermostat Fan Mode</label>
                <properties>
                    <property name="binding:*:Number">THERMOSTAT_FAN_MODE</property>
                </properties>
            </channel>
            <channel id="mode-1" typeId="mode">
                <label>Thermostat Fan State</label>
                <properties>
                    <property name="binding:*:Number">THERMOSTAT_FAN_STATE</property>
                </properties>
            </channel>
            <channel id="mode-1" typeId="mode">
                <label>Thermostat Operating State</label>
                <properties>
                    <property name="binding:*:Number">THERMOSTAT_OPERATING_STATE</property>
                </properties>
            </channel>
			<channel id="battery-level" typeId="system.battery-level">
				<properties>
					<property name="commandClass">BATTERY</property>
				</properties>
			</channel>
		</channels>
		<properties>
			<property name="vendor">Radio Thermostat Company of America</property>
			<property name="model">CT100</property>
			<property name="manufacturerId">0098</property>
			<property name="manufacturerRef">6401:0015,6401:0106,6401:0107</property>
		</properties>
		<config-description>
			<parameter-group name="configuration">
				<context>setup</context>
				<label>Configuration Parameters</label>
			</parameter-group>
			<parameter-group name="association">
				<context>link</context>
				<label>Association Groups</label>
			</parameter-group><!-- Remove if this is not a battery device -->
			<parameter-group name="wakeup">
				<context>sleep</context>
				<label>Wakeup Configuration</label>
			</parameter-group>
			<parameter name="group_1" type="integer" multiple="true"
				groupName="association">
				<label>Group 1</label>
				<description><![CDATA[Send report about Thermostat Mode, Thermostat Operating State, Fan Mode, Fan State, Setpoint, Sensor Multilevel]]></description>
				<multipleLimit>2</multipleLimit>
			</parameter><!-- Remove the wakeup if this is not a battery device -->
			<parameter name="wakeup_interval" type="integer" groupName="wakeup">
				<label>Wakeup Period</label>
				<description>Set the wakeup period in seconds</description>
			</parameter>
			<parameter name="wakeup_node" type="integer" groupName="wakeup"
				readOnly="true">
				<label>Wakeup Node</label>
				<description>The node to which wakeup messages will be sent</description>
			</parameter>
		</config-description>
	</thing-type>
</thing:thing-descriptions>