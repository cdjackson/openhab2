<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="zwave"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="http://eclipse.org/smarthome/schemas/zwave-thing-description/v1.0.0"
	xsi:schemaLocation="http://eclipse.org/smarthome/schemas/zwave-thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/zwave-thing-description/v1.0.0">
	<thing-type id="everspring_sp814_00_000">
		<label>Everspring SP814</label>
		<description><![CDATA[Motion Detector]]></description>
		<channels>
			<channel id="motion-1" typeId="motion">
				<properties>
					<property name="commandClass">ALARM</property>
				</properties>
			</channel>
			<channel id="battery-level" typeId="system.battery-level">
				<properties>
					<property name="commandClass">BATTERY</property>
				</properties>
			</channel>
		</channels>
		<properties>
			<property name="vendor">Everspring</property>
			<property name="model">SP814</property>
			<property name="manufacturerId">0060</property>
			<property name="manufacturerRef">0001:0002</property>
			<property name="commandClass:ASSOCIATION:0:default">1</property>
		</properties>
		<config-description>
			<parameter-group name="configuration">
				<context>setup</context>
				<label>Configuration Parameters</label>
			</parameter-group>
			<parameter-group name="association">
				<context>link</context>
				<label>Association Groups</label>
			</parameter-group>
			<parameter-group name="wakeup">
				<context>sleep</context>
				<label>Wakeup Configuration</label>
			</parameter-group>
			<parameter name="config_1_1" type="integer" min="0" max="99"
				groupName="configuration">
				<label>1: Basic Set Level</label>
				<description><![CDATA[Sets the command value sent when motion is triggered.<BR/>0=OFF<BR/>1-99=ON or dimmer level]]></description>
				<default>255</default>
			</parameter>
			<parameter name="config_2_1" type="integer" groupName="configuration">
				<label>2: Enable/Disable Detecting</label>
				<description><![CDATA[The Detecting function can be Disabled or Enabled.]]></description>
				<default>1</default>
				<options>
					<option value="0">Disabled</option>
					<option value="1">Enabled</option>
				</options>
			</parameter>
			<parameter name="config_3_1" type="integer" min="1" max="10"
				groupName="configuration">
				<label>3: Sensitivity Level</label>
				<description><![CDATA[1 Means lowest sensitivity and 10 means highest.]]></description>
				<default>6</default>
			</parameter>
			<parameter name="config_4_2" type="integer" min="5" max="3600"
				groupName="configuration">
				<label>4: Re-trigger Interval</label>
				<description><![CDATA[Adjust the interval of being re-triggered after the detector has been triggered.<BR/>Interval in seconds.]]></description>
				<default>5</default>
			</parameter>
			<parameter name="config_5_1" type="integer" min="1" max="100"
				groupName="configuration">
				<label>5: Lux Level</label>
				<description><![CDATA[Sets minimum Lux Level of ambient illumination necessary for Motion Detector to trigger.]]></description>
				<default>10</default>
			</parameter>
			<parameter name="config_6_1" type="integer" min="5" max="3600"
				groupName="configuration">
				<label>6: On-Off Duration</label>
				<description><![CDATA[The duration determines how long before the module sends an Off after being triggered.<BR/>Duration in seconds]]></description>
				<default>5</default>
			</parameter>
			<parameter name="group_1" type="integer" groupName="association">
				<label>Reports</label>
				<description><![CDATA[***Add description here***]]></description>
			</parameter>
			<parameter name="group_2" type="integer" multiple="true"
				groupName="association">
				<label>Control</label>
				<description><![CDATA[***Add description here***]]></description>
				<multipleLimit>3</multipleLimit>
			</parameter>
			<parameter name="wakeup_interval" type="integer" groupName="wakeup">
				<label>Wakeup Period</label>
				<description>Set the wakeup period in seconds</description>
			</parameter>
			<parameter name="wakeup_node" type="integer" groupName="wakeup"
				readOnly="true">
				<label>Wakeup Node</label>
				<description>The node to which wakeup messages will be sent
				</description>
			</parameter>
		</config-description>
	</thing-type>
	<channel-type id="motion">
		<item-type>Switch</item-type>
		<label>Motion</label>
		<description>Indications if motion is detected</description>
		<category>Motion</category>
	</channel-type>
</thing:thing-descriptions>